{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "paths": {
            "@/*": ["./lib/*"]
        },
        "esModuleInterop": true,
        "noImplicitAny": false,
        "outDir": ".",
        "skipLibCheck": true,
        "noEmit": false,
        "incremental": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": ["./lib/**/*", "./api/vercel.ts"],
    "exclude": ["node_modules", "*.test.*"]
}
